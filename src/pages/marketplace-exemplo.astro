---
/**
 * Marketplace Exemplo
 * 
 * Uma página de exemplo para testar o tema do Grão de Gente marketplace.
 */
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Button from '../components/ui/Button.astro';

// Navegação
const links = [
  {
    text: "Categorias",
    href: "#categorias"
  },
  {
    text: "Produtos",
    href: "#produtos"
  },
  {
    text: "Contato",
    href: "#contato"
  }
];

// Conteúdo
const title = "Grão de Gente";
const subtitle = "Marketplace para produtos infantis";
---

<Layout
  title="Exemplo Marketplace"
  description="Página de exemplo do marketplace Grão de Gente"
>
  <Hero 
    title="Grão de Gente"
    subtitle="O melhor marketplace para produtos infantis, reunindo os melhores vendedores e marcas em um só lugar."
  />
  
  <section class="py-xl">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-lg">Um marketplace completo para você e seu bebê</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-lg">
        <div class="text-center">
          <div class="bg-primary-light rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-sm">Entrega Rápida</h3>
          <p>Receba seus produtos em até 48 horas, dependendo da sua localização.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-primary-light rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <path d="M22 4 12 14.01l-3-3"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-sm">Produtos Certificados</h3>
          <p>Todos os produtos são verificados e certificados para a segurança do seu bebê.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-primary-light rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-sm">Confiança e Segurança</h3>
          <p>Navegue e compre com tranquilidade em nossa plataforma 100% segura.</p>
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-xl bg-primary">
    <div class="container text-center text-white">
      <h2 class="text-3xl font-bold mb-md">Venda seus produtos no Grão de Gente</h2>
      <p class="text-xl mb-lg max-w-2xl mx-auto">
        Aumente suas vendas alcançando milhares de compradores em busca de produtos infantis de qualidade.
      </p>
      <div class="flex flex-col sm:flex-row gap-sm justify-center">
        <Button 
          text="Seja um Vendedor"
          variant="accent"
          href="/vender-no-marketplace"
          size="lg"
        />
        <Button 
          text="Saiba Mais"
          variant="outlined"
          href="/como-vender"
          size="lg"
        />
      </div>
    </div>
  </section>
</Layout>