                // Desativa o estado de carregamento
                loading = false;
                if (!allItemsLoaded) {
                  loadMoreBtn.style.display = 'inline-flex';
                }
                loadingIndicator.classList.add('hidden');
                loadingIndicator.classList.remove('flex');
              }
            }
            
            // Fun√ß√£o para verificar se o usu√°rio chegou perto do final da p√°gina
            function handleScroll() {
              if (loading || allItemsLoaded) return;
              
              // Detecta scroll
              const windowHeight = window.innerHeight;
              const documentHeight = document.documentElement.scrollHeight;
              const scrollPosition = window.scrollY;
              
              // Se estiver pr√≥ximo do fim (200px antes do final)
              if (windowHeight + scrollPosition >= documentHeight - 200) {
                console.log('Pr√≥ximo do final da p√°gina - carregando mais produtos');
                loadMoreProducts();
              }
