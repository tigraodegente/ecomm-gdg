---
/**
 * Footer Component
 * 
 * Main footer for the marketplace.
 */
import { getMenuWithCategories } from '../../services/categoryService';

interface Props {
  customLinks?: {
    title: string;
    items: {
      text: string;
      href: string;
    }[];
  }[];
  /**
   * Identifica a variante do rodapé (main, minimal, etc.)
   */
  variant?: string;
}

const { 
  customLinks, 
  variant = 'main'
} = Astro.props;

// Default footer links
const defaultLinks = [
  {
    title: "Atendimento",
    items: [
      { text: "Central de Ajuda", href: "/central-de-ajuda" },
      { text: "Como Comprar", href: "/como-comprar" },
      { text: "Prazo de Entrega", href: "/prazo-de-entrega" },
      { text: "Trocas e Devoluções", href: "/trocas-e-devolucoes" },
      { text: "Fale Conosco", href: "/fale-conosco" }
    ]
  },
  {
    title: "Categorias",
    items: [
      { text: "Quarto do Bebê", href: "/categorias/quarto-do-bebe" },
      { text: "Enxoval", href: "/categorias/enxoval" },
      { text: "Brinquedos", href: "/categorias/brinquedos" },
      { text: "Alimentação", href: "/categorias/alimentacao" },
      { text: "Higiene e Banho", href: "/categorias/higiene-e-banho" }
    ]
  },
  {
    title: "Seja um Vendedor",
    items: [
      { text: "Vender no Marketplace", href: "/vender-no-marketplace" },
      { text: "Portal do Vendedor", href: "/portal-do-vendedor" },
      { text: "Comissões e Taxas", href: "/comissoes-e-taxas" },
      { text: "Perguntas Frequentes", href: "/perguntas-frequentes" },
      { text: "Termos para Vendedores", href: "/termos-para-vendedores" }
    ]
  }
];

// Use custom links if provided, otherwise use default
const links = customLinks || defaultLinks;

// Ano atual - gerado dinamicamente no cliente, não afeta cache
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-lg">
      <!-- Column 1: About -->
      <div>
        <h3 class="footer-title">Grão de Gente</h3>
        <p class="mb-md">
          O melhor marketplace para produtos infantis, reunindo os melhores vendedores e marcas em um só lugar.
        </p>
        <div class="flex gap-sm">
          <a href="#" class="text-gray-700 hover:text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-700 hover:text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-700 hover:text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Columns for Links -->
      {
        links.map((section) => (
          <div>
            <h3 class="footer-title">{section.title}</h3>
            <ul class="footer-list">
              {section.items.map((link) => (
                <li class="footer-item">
                  <a href={link.href} class="footer-link">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    
    <!-- Payments and Trust -->
    <div class="footer-trust mt-8 border-t border-gray-200 pt-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Payment Methods -->
        <div>
          <span class="text-sm font-medium block mb-3">Formas de Pagamento:</span>
          <div class="flex flex-wrap gap-2">
            <!-- Uso otimizado de imagens de pagamento com paths relativos -->
            <img src="/images/payment/mastercard.webp" alt="Mastercard" class="h-[26px]" loading="lazy">
            <img src="/images/payment/visa.webp" alt="Visa" class="h-[26px]" loading="lazy">
            <img src="/images/payment/amex.webp" alt="American Express" class="h-[26px]" loading="lazy">
            <img src="/images/payment/diners.webp" alt="Dinners" class="h-[26px]" loading="lazy">
            <img src="/images/payment/elo.webp" alt="Elo" class="h-[26px]" loading="lazy">
            <img src="/images/payment/aurora.webp" alt="Aurora" class="h-[26px]" loading="lazy">
            <img src="/images/payment/hipercard.webp" alt="Hipercard" class="h-[26px]" loading="lazy">
            <img src="/images/payment/sorocred.webp" alt="Sorocred" class="h-[26px]" loading="lazy">
          </div>
        </div>
        
        <!-- Security and Platform -->
        <div>
          <span class="text-sm font-medium block mb-3">Segurança:</span>
          <img src="/images/security/comodo.webp" alt="Logo de segurança C.O.M.O.D.O." class="h-[40px]" loading="lazy">
          
          <span class="text-sm font-medium block mt-4 mb-3">Plataforma:</span>
          <img src="/images/platform/konduza.webp" alt="Logo Konduza" class="h-[26px]" loading="lazy">
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom footer with copyright -->
  <div class="footer-bottom container">
    <p>&copy; <span class="current-year">{currentYear}</span> Grão de Gente - CNPJ: 00.000.000/0000-00</p>
    <p class="mt-xs">
      <a href="/termos-de-uso" class="hover:text-primary">Termos de Uso</a> | 
      <a href="/politica-de-privacidade" class="hover:text-primary">Política de Privacidade</a>
    </p>
  </div>
</footer>

<!-- Script para renderização dinâmica do ano atual -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const yearElements = document.querySelectorAll('.current-year');
    const currentYear = new Date().getFullYear();
    yearElements.forEach(el => el.textContent = currentYear);
  });
</script>

<style>
  .footer {
    background-color: #f9f9f9;
    padding: 3rem 0 1rem;
    margin-top: 3rem;
    color: #333;
  }
  
  .footer-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    color: #444;
  }
  
  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-item {
    margin-bottom: 0.75rem;
  }
  
  .footer-link {
    color: #666;
    font-size: 0.95rem;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer-link:hover {
    color: #40C1AC;
  }
  
  .footer-bottom {
    border-top: 1px solid #e5e5e5;
    margin-top: 2rem;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    font-size: 0.9rem;
    color: #777;
    text-align: center;
  }
  
  .gap-sm {
    gap: 0.75rem;
  }
  
  .gap-lg {
    gap: 2rem;
  }
  
  .mb-md {
    margin-bottom: 1.25rem;
  }
  
  .mt-xs {
    margin-top: 0.5rem;
  }
  
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>