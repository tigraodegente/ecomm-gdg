---
/**
 * Feature Card Component
 * 
 * Um card para exibir uma feature ou recurso do produto/servi√ßo.
 * Usa o componente Card base.
 */
import Card from '../../ui/Card.astro';

interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<Card 
  bordered={true}
  padding="large"
  align="center"
  background="white" 
  hoverEffect={true}
  href={href}
  class="h-full"
>
  {icon && (
    <div class="text-center mb-4">
      <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-cyan-100 text-cyan500">
        <Fragment set:html={icon} />
      </div>
    </div>
  )}
  
  <h3 class="text-balance !m-0 text-lg font-medium mb-2">{title}</h3>
  <p class="m-0 text-gray-600">{description}</p>
</Card>
